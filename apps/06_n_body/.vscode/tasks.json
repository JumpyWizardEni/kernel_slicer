{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildRelease",
            "type": "shell",
            "command": "cd cmake-build-release && make -j 8",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "BuildDebug",
            "type": "shell",
            "command": "cd cmake-build-debug && make -j 4",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Kernels",
            "type": "shell",
            "command": "../clspv z_generated.cl -o z_generated.cl.spv -cl-fast-relaxed-math -cl-opt-disable -cl-single-precision-constant -cl-denorms-are-zero -cl-fp32-correctly-rounded-divide-sqrt -pod-pushconstant",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}